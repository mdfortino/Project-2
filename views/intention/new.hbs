<section class="form-container">
  <h4 style = "color: gray">breathe</h4>
  <form action="/intention" method="post" class="intention-form">
    <div class="input-field">
      <textarea name= "intention[content]" cols="40" rows="20"   
      placeholder="take a deep breath... 
set your intention."></textarea>
    </div>
    <div class="">
      <select name="author" id="author">
        <option value="" disabled selected>Choose the User</option>
        {{#each users}}
          <option value="{{id}}">{{email}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-field">
      <input type="submit" value="+" class="btn" style = "background-color: gray">
    </div>
  </form>
</section>