{{#if awareness}}
  <ul class="awareness">
    {{#each awareness}}
      <div class="card">
        <div class="card-content">
          <a class="card-title" href="/awareness/{{id}}">
            {{ content }}
          </a>
        </div>
        <div class="card-action">
          <a href="/user/{{ author.id }}" class="">{{ author.email }}</a>
          <span class="awareness__date">{{ createdAt }}</span>
          <span class="awareness_answers">{{ comments.length }} Comments</span>
        </div>
      </div>
    {{/each}}
  </ul>
{{/if}}