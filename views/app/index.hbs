{{#if intentions}}
  <ul class="intentions">
    {{#each intentions}}
      <div class="card">
        <div class="card-content">
          <a class="card-title" href="/intention/{{id}}">
            {{ content }}
          </a>
        </div>
        <div class="card-action">
          <a href="/user/{{ author.id }}" class="">{{ author.email }}</a>
          <span class="intention__date">{{ createdAt }}</span>
          <span class="intention_answers">{{ answers.length }} Comments</span>
          <span class = "intention_likes">{{likes.length}} Likes </span>
        </div>
      </div>
    {{/each}}
  </ul>
{{/if}}