<section class="form-container">
  <h4>breathe</h4>
  <form action="/question" method="post" class="question-form">
    <div class="input-field">
      <textarea name= "question[content]" cols="30" rows="10"   
      placeholder="5 things you can see"></textarea>
    </div>
    <div class="">
      <select name="author" id="author">
        <option value="" disabled selected>Choose the User</option>
        {{#each users}}
          <option value="{{id}}">{{email}}</option>
        {{/each}}
      </select>
    </div>
    <div class="input-field">
      <input type="submit" value="+" class="btn">
    </div>
  </form>
</section>